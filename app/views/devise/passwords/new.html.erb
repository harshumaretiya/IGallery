<div class=" a1 signup-form ">


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<h3 style="color:Black"></h3>
  <h2>Forgot password ?</h2>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control",placeholder: "Enter email" %>
  </div>

  <div class="form-group">
    <%= f.submit "Send me reset password instructions",class: "btn btn-success btn-lg btn-block" %>
  </div>

  <%= render "devise/shared/links" %>

<% end %>

</div>
</div>