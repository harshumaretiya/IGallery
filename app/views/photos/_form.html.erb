<%= form_for [@album, @photo], html: { multipart: true } do |f| %>
  <div class="form-row">
  <% if photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
        <% photo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group col-md-12">
    <%= f.label :photo_name %>
    <%= f.text_field :photo_name, class:"form-control" %>
  </div>

  <div class="form-group col-md-12">
    <%= f.label :image %>
    <%= f.file_field :image %>
    </div>

  <div class="form-group col-md-12">
    <%= f.label :photo_title %>
    <%= f.text_field :photo_title, class:"form-control" %>
  </div>
  </div> 
  <div class="form-row">
   
  <table class='col-md-5'> 
    <tbody class='fields'>
      <%= f.fields_for :tags do |builder| %>
        <%= render 'tag_fields', f: builder %>
      <% end %>
    </tbody>
  </table>
 
  
    <div class="form-group col-md-12">
      <%= link_to_add_fields "Add Tags", f, :tags %>
    </div>
  <div class="form-actions">
    <%= f.button :submit %> 
  </div>
</div>
<% end %>


