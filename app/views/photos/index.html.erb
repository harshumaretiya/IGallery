<h1>Photos</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Image</th>
      <th cope="col">Photo name</th>
      <th cope="col">Photo title</th>
      <th cope="col">Tag Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
      <td> <%= image_tag photo.image.url(:thumb) %></td>
        <td><%= photo.photo_name %></td>
        <td><%= photo.photo_title %></td>
        <td>
          <% photo.tags.each do |tag| %>
            <li>
              <%= tag.name %>
            </li>
          <% end %>
        </td>
        <td><%= link_to 'Show', album_photo_path(@album,photo), class:"btn btn-secondary" ,style: "color: blue;background-color: beige;font-size: inherit;" %></td>
        <td><%= link_to 'Edit', edit_album_photo_path(@album,photo), class:"btn btn-secondary" ,style: "color: blue;background-color: beige;font-size: inherit;" %></td>
        <td><%= link_to 'Destroy', album_photo_path(@album,photo),  class:"btn btn-secondary" ,style: "color: blue;background-color: beige;font-size: inherit;" ,method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      
    <% end %>
  </tbody>
  
</table>
<%= will_paginate @photos %>
<br>

<%= link_to 'New Photo', new_album_photo_path %>
 